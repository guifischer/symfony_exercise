{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50 flex flex-col justify-center sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <img class="mx-auto h-12 w-auto" src="https://tailwindui.com/img/logos/workflow-mark-indigo-600.svg" alt="Workflow">
    <h2 class="mt-6 mb-5 text-center text-3xl font-extrabold text-gray-900">
      Create your account
    </h2>


  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
      {{ form_start(registrationForm, {'attr': {'class': 'space-y-6'}}) }}

          {% if not registrationForm.vars.valid %}
          <div class="rounded-md bg-red-200 p-4">
              <div class="flex">
                  <div class="flex-shrink-0">
                  <!-- Heroicon name: solid/exclamation -->
                  <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                      <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                  </svg>
                  </div>
                  <div class="ml-3">
                  <div class="text-sm text-red-700">
                      {% if form_errors(registrationForm.email) %}
                        {{ form_errors(registrationForm.email) }}
                      {% endif %}
                      {% if form_errors(registrationForm.password) %}
                        {{ form_errors(registrationForm.password) }}
                      {% endif %}
                      {% if form_errors(registrationForm.agreeTerms) %}
                        {{ form_errors(registrationForm.agreeTerms) }}
                      {% endif %}
                  </div>
                  </div>
              </div>
          </div>
        {% endif %}

            <div>
                <label for="email" class="block text-sm font-medium text-gray-700">
                    {{ form_label(registrationForm.email) }}
                </label>
                <div class="mt-1">
                    {{ form_widget(registrationForm.email, {'attr': {'class': 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
                </div>
            </div>

            <div>
                <label for="password" class="block text-sm font-medium text-gray-700">
                    {{ form_label(registrationForm.password) }}
                </label>
                <div class="mt-1">
                    {{ form_widget(registrationForm.password, {'attr': {'class': 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
                </div>
            </div>

            <div class="flex items-center">
                {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded'}}) }}
                <label for="remember-me" class="ml-2 block text-sm text-gray-900">
                    {{ form_label(registrationForm.agreeTerms) }}
                </label>
            </div>

            <div>
                <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    Register
                </button>
            </div>
            <div class="flex items-center justify-center">
                <div class="text-sm">
                    Already have an accout?
                    <a href="{{ path('app_login') }}" class="font-medium text-indigo-600 hover:text-indigo-500">
                    Login
                    </a>
                </div>
            </div>
      {{ form_end(registrationForm) }}
    </div>
  </div>
</div>
{% endblock %}
